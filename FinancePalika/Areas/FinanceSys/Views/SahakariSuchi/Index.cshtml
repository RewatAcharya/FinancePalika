@model IEnumerable<SahakariSuchiViewModel>
@inject IUtility _Utility


@{
    ViewData["Title"] = "सहकारी सूची";
    int i = 1;
}


<a class="btn btn-sm btn-primary" asp-action="Create" class="btn btn-primary" data-ajax="true" data-ajax-method="get" data-ajax-update="#page" data-bs-toggle="modal" data-bs-target="#staticBackdrop"> नयाँ सहकारी</a>

<table class="table table-bordered mt-2">
    <thead>
        <tr>
            <th>S.N.</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.NameNepali)</th>
            <th>@Html.DisplayNameFor(model => model.DartaMiti)</th>
            <th>@Html.DisplayNameFor(model => model.DartaNo)</th>
            <th>ठेगाना</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@i</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.NameNepali)</td>
                <td>@Html.DisplayFor(modelItem => item.DartaMiti)</td>
                <td>@Html.DisplayFor(modelItem => item.DartaNo)</td>
                <td>@item.StateName, @item.DistrictName, @item.LocalLevel, @item.ToleName, @item.WardNo</td>
                <td>
                    <a asp-action="Create" asp-route-id="@item.Id" data-ajax="true" data-ajax-method="get" data-ajax-update="#page" data-bs-toggle="modal" data-bs-target="#staticBackdrop" class="btn btn-sm btn-primary">फेर्नु होस</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete" data-ajax="true" data-ajax-method="get" data-ajax-update="#page" data-bs-toggle="modal" data-bs-target="#staticBackdrop">हटाउनु होस</a>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>


<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog" id="page">
    </div>
</div>


