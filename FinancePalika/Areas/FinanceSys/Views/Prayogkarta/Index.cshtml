@model IEnumerable<PrayogKartaViewModel>

@{
    ViewData["Title"] = "प्रयोगकर्ता व्यवस्थापन";
}

<!-- Include DataTables CSS and JS -->
<link href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>

<a asp-controller="PrayogKarta" asp-action="Create" class="btn btn-sm btn-primary" data-ajax="true" data-ajax-method="get" data-ajax-update="#page" data-bs-toggle="modal" data-bs-target="#staticBackdrop">नयाँ प्रयोगकर्ता</a>

<table id="dataTable" class="table table-bordered mt-2">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FullName)</th>
            <th>@Html.DisplayNameFor(model => model.PrayogkartaName)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Role)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.PrayogkartaName</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Role</td>
                <td>
                    <a asp-action="Create" class="btn btn-sm btn-primary" asp-route-id="@item.Id" title="Update" data-ajax="true" data-ajax-method="get" data-ajax-update="#page" data-bs-toggle="modal" data-bs-target="#staticBackdrop">फेर्नु होस</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete" data-ajax="true" data-ajax-method="get" data-ajax-update="#page" data-bs-toggle="modal" data-bs-target="#staticBackdrop">हटाउनु होस</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog" id="page">
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "paging": true,       // Enable pagination
            "searching": true,    // Enable search box
            "ordering": true,     // Enable column sorting
            "info": true          // Enable table information display
        });
    });
</script>


